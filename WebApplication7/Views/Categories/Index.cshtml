@model IEnumerable<WebApplication7.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCat">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCat">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCat">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
